generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}


model Chat {
  id        Int       @id
  title     String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  chatId    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
  content   String
  createdAt DateTime @default(now())

  @@unique([chatId, content])
}
